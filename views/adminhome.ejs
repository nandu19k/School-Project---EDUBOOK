<div class='notice'>
	<h4 style='text-align:center;'>
	NOTICE BOARD
		</h4>
	<table class="table" id='noticetable'>
	
		<thead>
		    <td>Date</td>
			<td>Notice Details</td>			
		</thead>
		<tbody>
		<%notice.forEach(function(notices){%>
		<tr>
			<td><%=notices.created.getFullYear()%>-<%=notices.created.getMonth()+1%>-<%=notices.created.getDate()%></td>
			<td>
				Title:<%=notices.title%>
				<br>
				From:<%=notices.from%>
				<br>
				To class:<%=notices.class%>				
				<br>
				Body:<%=notices.body.substring(0,50)%>  <strong>.......</strong>
				<br>
				<a style='color:red' href="/adminnotice/<%=notices._id%>">READ MORE</a>
			</td>
		</tr>
		<%});%>
		</tbody>
	</table>
